generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  username        String?  @unique
  password        String?
  clerkId         String?  @unique
  image           String?
  bio             String?
  favoriteArtists String?
  favoriteSongs   String?
  theme           String   @default("american-robin")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Onboarding
  onboardingCompletedAt DateTime?
  onboardingSkippedAt   DateTime?

  // Streak system
  currentStreak         Int       @default(0)
  longestStreak         Int       @default(0)
  lastStreakDate        DateTime?
  streakFreezeAvailable Boolean   @default(true)
  streakFreezeUsedAt    DateTime?
  lastStreakRestoreAt   DateTime?

  // Invite system
  inviteCode            String?   @unique

  // Premium/Founding Flock
  isPremium             Boolean   @default(false)
  isFoundingMember      Boolean   @default(false)
  premiumSince          DateTime?
  stripeCustomerId      String?   @unique

  entries                Entry[]
  taggedEntries          EntryTag[]
  sentFriendRequests     FriendRequest[] @relation("Sender")
  receivedFriendRequests FriendRequest[] @relation("Receiver")
  mentions               Mention[]
  notifications          Notification[]
  personReferences       PersonReference[]
  vibes                  Vibe[]
  comments               Comment[]
  pushSubscriptions      PushSubscription[]
  sentInvites            Invite[]  @relation("InviteSender")
  receivedInvites        Invite[]  @relation("InviteReceiver")

  @@map("users")
}

model Entry {
  id          String   @id @default(cuid())
  date        DateTime
  userId      String
  songTitle   String
  artist      String
  albumTitle  String
  albumArt    String
  durationMs  Int
  explicit    Boolean  @default(false)
  popularity  Int
  releaseDate String?
  trackId     String
  uri         String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags     EntryTag[]
  mentions Mention[]
  people   PersonReference[]
  vibes    Vibe[]
  comments Comment[]

  @@unique([userId, date])
  @@index([userId, date])
  @@map("entries")
}

model EntryTag {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
  @@map("entry_tags")
}

model FriendRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sender   User @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@map("friend_requests")
}

model Mention {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
  @@map("mentions")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  relatedId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model PersonReference {
  id        String   @id @default(cuid())
  entryId   String
  name      String
  userId    String?
  source    String?
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([entryId, name])
  @@map("person_references")
}

model Vibe {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
  @@map("vibes")
}

model Comment {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([entryId])
  @@map("comments")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model Invite {
  id         String    @id @default(cuid())
  code       String    @unique
  senderId   String
  receiverId String?
  status     String    @default("pending") // pending, accepted, expired
  createdAt  DateTime  @default(now())
  usedAt     DateTime?

  sender   User  @relation("InviteSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User? @relation("InviteReceiver", fields: [receiverId], references: [id], onDelete: SetNull)

  @@index([code])
  @@index([senderId])
  @@map("invites")
}

// Analytics Events - Track user behavior throughout the app
model AnalyticsEvent {
  id         String   @id @default(cuid())
  userId     String?  // Nullable for anonymous events
  event      String   // Event name (snake_case)
  properties Json?    // Additional event properties
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([event])
  @@index([createdAt])
  @@map("analytics_events")
}

// Bird Unlocks - Track which birds users have unlocked
model UnlockedBird {
  id         String   @id @default(cuid())
  userId     String
  birdId     String   // Theme ID like 'american-goldfinch'
  unlockedAt DateTime @default(now())
  method     String   // 'milestone', 'purchased', 'premium', 'default'

  @@unique([userId, birdId])
  @@index([userId])
  @@map("unlocked_birds")
}
