generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  username        String?  @unique
  password        String?
  clerkId         String?  @unique
  image           String?
  bio             String?
  favoriteArtists String?
  favoriteSongs   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  entries                Entry[]
  taggedEntries          EntryTag[]
  sentFriendRequests     FriendRequest[] @relation("Sender")
  receivedFriendRequests FriendRequest[] @relation("Receiver")
  mentions               Mention[]
  notifications          Notification[]
  personReferences       PersonReference[]

  @@map("users")
}

model Entry {
  id          String   @id @default(cuid())
  date        DateTime
  userId      String
  songTitle   String
  artist      String
  albumTitle  String
  albumArt    String
  durationMs  Int
  explicit    Boolean  @default(false)
  popularity  Int
  releaseDate String?
  trackId     String
  uri         String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags     EntryTag[]
  mentions Mention[]
  people   PersonReference[]

  @@unique([userId, date])
  @@index([userId, date])
  @@map("entries")
}

model EntryTag {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
  @@map("entry_tags")
}

model FriendRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sender   User @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@map("friend_requests")
}

model Mention {
  id        String   @id @default(cuid())
  entryId   String
  userId    String
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
  @@map("mentions")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  relatedId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model PersonReference {
  id        String   @id @default(cuid())
  entryId   String
  name      String
  userId    String?
  source    String?
  createdAt DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([entryId, name])
  @@map("person_references")
}
